<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/redRectangle"
        android:layout_width="260dp"
        android:layout_height="112dp"
        android:background="@drawable/red_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:id="@+id/sampleImageView"
        android:layout_width="260dp"
        android:layout_height="242dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/redRectangle" />

    <Button
        android:id="@+id/showNotificationButton"
        android:layout_width="296dp"
        android:layout_height="50dp"
        android:text="@string/notification_button_label"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/sampleImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>